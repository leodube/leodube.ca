datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Page {
  id      String   @id @default(cuid())
  page    String   @default("")
  status  String?  @default("draft")
  image   Image[]  @relation("Page_image")
  content Json     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  seo     SEO_Tag? @relation("Page_seo", fields: [seoId], references: [id])
  seoId   String?  @map("seo")

  @@index([seoId])
}

model Job {
  id          String    @id @default(cuid())
  company     String    @default("")
  position    String    @default("")
  type        String?   @default("fullTime")
  contract    Boolean   @default(false)
  startDate   DateTime?
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  skills      Skill[]   @relation("Job_skills")
  image       Image[]   @relation("Job_image")
  description Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Project {
  id          String  @id @default(cuid())
  title       String  @default("")
  subtitle    String  @default("")
  type        String? @default("personal")
  image       Image[] @relation("Project_image")
  description Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Skill {
  id              String @id @default(cuid())
  name            String @default("")
  type            String @default("programmingLanguage")
  level           String @default("weekly")
  from_Job_skills Job[]  @relation("Job_skills")
}

model Image {
  id                 String    @id @default(cuid())
  label              String    @default("")
  image              Json?
  from_Page_image    Page[]    @relation("Page_image")
  from_Job_image     Job[]     @relation("Job_image")
  from_Project_image Project[] @relation("Project_image")
}

model SEO_Tag {
  id              String @id @default(cuid())
  page            String @default("")
  metaTitle       String @default("")
  metaDescription String @default("")
  from_Page_seo   Page[] @relation("Page_seo")
}